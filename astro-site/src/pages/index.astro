---
import BaseLayout from '@/layouts/BaseLayout.astro';

const pageTitle = 'AI GEO';
const pageDescription = 'Learn how to optimize your product sales websites and online presence for AI visibility in ChatGPT, Gemini, Copilot, Grok, Meta AI, You.com, Voice Search, and AI search overviews.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="hero py-20 md:py-32 grid-bg">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center animate-fade-in">
          <h1 class="text-gradient mb-6">
            Get Found When It Matters Most: AI Search Optimization
          </h1>
          <p class="text-xl md:text-2xl text-light-bg-alt dark:text-dark-bg-alt mb-10 leading-relaxed">
            Over 1 billion people now use AI tools like ChatGPT, Gemini, and Perplexity to research products and
            make purchase decisions. Is your brand visible when they ask?
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#what-is-ai-geo" class="btn btn-primary">
              Understand AI GEO
            </a>
            <a href="#ai-tools" class="btn btn-secondary">
              See Major Platforms
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- What is AI GEO Section -->
    <section id="what-is-ai-geo" class="py-20 bg-dark-bg-alt dark:bg-dark-bg-alt">
      <div class="container">
        <h2 class="text-center mb-12">What is AI GEO?</h2>
        <div class="max-w-3xl mx-auto text-lg leading-relaxed space-y-6">
          <p>
            <strong class="text-primary">AI Generative Engine Optimization (AI GEO)</strong> is the practice of optimizing your
            digital presence to appear in AI-generated responses, recommendations, and search results.
          </p>
          <p>
            As billions of people shift from traditional search engines to conversational AI assistants,
            your visibility in these platforms directly impacts your business growth.
          </p>
        </div>

        <!-- Feature Cards -->
