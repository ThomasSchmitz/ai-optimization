---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumb from '@/components/Breadcrumb.astro';

export async function getStaticPaths() {
  const platformEntries = await getCollection('platforms');
  return platformEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { title, description, lastUpdated } = entry.data;

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Platforms', href: '/platforms' },
  { label: title, href: Astro.url.pathname },
];
---

<BaseLayout title={title} description={description}>
  <Breadcrumb items={breadcrumbItems} />
  
  <main class="min-h-screen">
    <!-- Platform Hero -->
    <section class="py-16 md:py-24 bg-light-bg-alt dark:bg-dark-bg-alt">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center">
          <div class="text-6xl mb-6">ðŸ¤–</div>
          <h1 class="text-gradient mb-6">{title}</h1>
          <p class="text-xl md:text-2xl mb-8" style="color: var(--text-light);">
            {description}
          </p>
          {lastUpdated && (
            <p class="text-sm text-light">
              Last updated: {new Date(lastUpdated).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </p>
          )}
        </div>
      </div>
    </section>

    <!-- Content -->
    <article class="py-16">
      <div class="container">
        <div class="max-w-4xl mx-auto prose prose-lg dark:prose-invert">
          <Content />
        </div>
      </div>
    </article>
  </main>
</BaseLayout>

<style>
  article :global(h2) {
    @apply text-3xl font-bold mt-12 mb-6;
    color: var(--text-color);
  }
  
  article :global(h3) {
    @apply text-2xl font-bold mt-8 mb-4;
    color: var(--text-color);
  }
  
  article :global(p) {
    @apply mb-4 leading-relaxed;
    color: var(--text-light);
  }
  
  article :global(ul), article :global(ol) {
    @apply mb-6 space-y-2;
    color: var(--text-light);
  }
  
  article :global(li) {
    @apply leading-relaxed;
  }
  
  article :global(table) {
    @apply w-full my-8;
  }
  
  article :global(th) {
    @apply bg-primary/10 px-4 py-3 text-left font-semibold;
    color: var(--text-color);
  }
  
  article :global(td) {
    @apply border-t px-4 py-3;
    border-color: var(--border-color);
    color: var(--text-light);
  }
  
  article :global(a) {
    @apply text-primary hover:text-secondary transition-colors;
  }
  
  article :global(code) {
    @apply bg-dark-card px-2 py-1 rounded text-sm;
    color: var(--secondary-color);
  }
  
  article :global(pre) {
    @apply bg-dark-card p-4 rounded-lg overflow-x-auto my-6;
  }
  
  article :global(blockquote) {
    @apply border-l-4 border-primary pl-6 py-2 my-6 italic;
    color: var(--text-light);
  }
  
  article :global(.grid) {
    @apply gap-6;
  }
</style>
