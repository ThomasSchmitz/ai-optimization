---
// Header component with navigation
---

<header class="sticky top-0 z-50 w-full border-b backdrop-blur supports-[backdrop-filter]:bg-dark-bg/60" style="border-color: var(--border-color);">
  <nav class="container flex h-16 items-center justify-between">
    <div class="flex items-center gap-8">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 text-xl font-bold no-underline">
        <span class="text-primary">AI</span>
        <span class="text-secondary">Optimization</span>
      </a>
      
      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-6">
        <li><a href="/guides/" class="text-sm font-medium hover:text-primary transition-colors">Guides</a></li>
        <li><a href="/platforms/" class="text-sm font-medium hover:text-primary transition-colors">Platforms</a></li>
        <li><a href="/industries/" class="text-sm font-medium hover:text-primary transition-colors">Industries</a></li>
        <li><a href="/tools/" class="text-sm font-medium hover:text-primary transition-colors">Tools</a></li>
        <li><a href="/resources/" class="text-sm font-medium hover:text-primary transition-colors">Resources</a></li>
      </ul>
    </div>
    
    <div class="flex items-center gap-4">
      <!-- Search Button -->
      <button 
        id="search-button"
        class="hidden sm:flex items-center gap-2 px-3 py-1.5 text-sm border rounded-md hover:border-primary transition-colors"
        style="border-color: var(--border-color);"
        aria-label="Search"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <span class="hidden lg:inline">Search</span>
        <kbd class="hidden lg:inline px-1.5 py-0.5 text-xs border border-border rounded">Ctrl K</kbd>
      </button>
      
      <!-- Theme Toggle -->
      <button 
        id="theme-toggle"
        class="p-2 rounded-md hover:bg-dark-bg-alt transition-colors"
        aria-label="Toggle theme"
      >
        <svg class="w-5 h-5 sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg class="w-5 h-5 moon-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md hover:bg-dark-bg-alt transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t" style="border-color: var(--border-color);">
    <ul class="container py-4 space-y-2">
      <li><a href="/guides/" class="block py-2 text-sm font-medium hover:text-primary transition-colors">Guides</a></li>
      <li><a href="/platforms/" class="block py-2 text-sm font-medium hover:text-primary transition-colors">Platforms</a></li>
      <li><a href="/industries/" class="block py-2 text-sm font-medium hover:text-primary transition-colors">Industries</a></li>
      <li><a href="/tools/" class="block py-2 text-sm font-medium hover:text-primary transition-colors">Tools</a></li>
      <li><a href="/resources/" class="block py-2 text-sm font-medium hover:text-primary transition-colors">Resources</a></li>
    </ul>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Theme toggle
  const themeToggle = document.getElementById('theme-toggle');
  const sunIcon = document.querySelector('.sun-icon');
  const moonIcon = document.querySelector('.moon-icon');
  
  function updateThemeIcon() {
    const isDark = document.documentElement.classList.contains('dark');
    sunIcon?.classList.toggle('hidden', !isDark);
    moonIcon?.classList.toggle('hidden', isDark);
  }
  
  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.contains('dark');
    document.documentElement.classList.toggle('dark', !isDark);
    localStorage.setItem('theme', isDark ? 'light' : 'dark');
    updateThemeIcon();
  });
  
  // Initialize theme icon
  updateThemeIcon();
</script>

<style>
  html:not(.dark) header {
    @apply bg-light-bg/60;
  }
</style>
